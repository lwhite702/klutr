{
  "crons": [
    {
      "path": "/api/cron/nightly-cluster",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/nightly-stacks",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/weekly-insights",
      "schedule": "0 9 * * 1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
